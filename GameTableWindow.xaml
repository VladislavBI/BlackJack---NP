<Window x:Class="GameTable.GameTableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GameTableWindow" Height="334" Width="300">
    <Grid>
        <StackPanel Name="StackplayersCard" HorizontalAlignment="Left" Height="52" Margin="10,168,0,0" VerticalAlignment="Top" Width="272" Orientation="Horizontal" Background="#FF87FF0E"/>
        <TextBlock Name="TextBlockName" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" RenderTransformOrigin="0.18,-0.375"/>
        <TextBlock Name="TextBlockScore" HorizontalAlignment="Left" Margin="232,13,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <Image Name="ImagePlayersPhoto" HorizontalAlignment="Left" Height="67" Margin="10,31,0,0" VerticalAlignment="Top" Width="61"/>
        <Button Name="ButtonGetCard" Content="Взять карту" HorizontalAlignment="Left" Margin="10,256,0,0" VerticalAlignment="Top" Width="75" Click="ButtonGetCard_Click"/>
        <Button Name="ButtonPass" Content="Конец хода" HorizontalAlignment="Left" Margin="207,256,0,0" VerticalAlignment="Top" Width="75" Click="ButtonPass_Click"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="98,99,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Window>
